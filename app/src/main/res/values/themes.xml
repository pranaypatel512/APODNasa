<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.APODNasa" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="fontFamily">@font/nunito_medium</item>

        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">@bool/windowLightStatusBar
        </item>

        <item name="actionBarStyle">@style/Widget.MaterialComponents.ActionBar.Primary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.APODNasa.NoActionBar">
        <item name="android:fontFamily">@font/nunito_medium</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Theme.APODNasa.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.APODNasa.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>